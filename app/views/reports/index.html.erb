

<h1>Generate report</h1>


<%= form_for :report, :html => {:class => "form-horizontal"}, :method => :get  do |f| %>

  <div class="form-group has-feedback">
    <%= f.label :start_dt, "Start date:", :class => "col-sm-3 control-label" %>
    <div class="col-sm-6 controls">
      <%= f.text_field :start_dt, :class => "report_datetime form-control" %>
      <span class="glyphicon glyphicon glyphicon-calendar form-control-feedback " aria-hidden="true"></span>
    </div>
  </div>
  <div class="form-group has-feedback">
    <%= f.label :end_dt, "End date:", :class => "col-sm-3 control-label" %>
    <div class="col-sm-6 controls">
      <%= f.text_field :end_dt, :class => "report_datetime form-control" %>
      <span class="glyphicon glyphicon glyphicon-calendar form-control-feedback" aria-hidden="true"></span>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :room_id, "Room:", :class => "col-sm-3 control-label" %>
    <div class="col-sm-6 controls">
      <%= f.select(:room_id, "<option value=\"all\">All</option>".html_safe + options_from_collection_for_select(Room.accessible_by(current_ability), 'id', 'title', (@room) ? @room.id : ''), {}, { class: "form-control" })%>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :college_name, "College Name:", :class => "col-sm-3 control-label" %>
    <div class="col-sm-6 controls">
      <%= f.select :college_name, "<option value=\"all\">All</option>".html_safe + options_for_select(college_name_options, @college_name), {}, { class: "form-control" }%>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :college_code, "College Code:", :class => "col-sm-3 control-label" %>
    <div class="col-sm-6 controls">
      <%= f.select :college_code, "<option value=\"all\">All</option>".html_safe + options_for_select(college_code_options, @college_code), {}, { class: "form-control" }%>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :affiliation, "Dept Affiliation:", :class => "col-sm-3 control-label" %>
    <div class="col-sm-6 controls">
      <%= f.select :affiliation, "<option value=\"all\">All</option>".html_safe + options_for_select(dept_options, @affiliation), {}, { class: "form-control" }%>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :major, "Major:", :class => "col-sm-3 control-label" %>
    <div class="col-sm-6 controls">
      <%= f.select :major, "<option value=\"all\">All</option>".html_safe + options_for_select(major_options, @major), {}, { class: "form-control" }%>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :patron_status, "Patron Status:", :class => "col-sm-3 control-label" %>
    <div class="col-sm-6 controls">
      <%= f.select :patron_status, "<option value=\"all\">All</option>".html_safe + options_for_select(user_status_options, @patron_status), {}, { class: "form-control" }%>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10">
      <%= f.submit "Generate", class: "btn btn-primary" %>
    </div>
  </div>

<% end %>
