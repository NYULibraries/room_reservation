<h1>Listing users</h1>

<%= form_tag users_path, :class => "form-inline clearfix", :method => :get do %>
  <p>
    <%= hidden_field_tag :direction, params[:direction] %>
    <%= hidden_field_tag :sort, params[:sort] %>
    <div class="input-append pull-left form-group">
      <%= label_tag :q, "Search...", :class => "sr-only" %>
      <div class="input-group">
        <%= text_field_tag :q, nil, :class => "search_q q form-control", :placeholder => "Search...", style: "height: 33px;" %>
        <span class="input-group-btn">
          <%= button_tag(:type => 'submit', :id => "search", :class => "btn btn-primary search-btn") do
            content_tag(:span, 'Search', :class => "submit-search-text")+"     "+
            content_tag(:span, nil, :class => "glyphicon glyphicon-search")
          end %>
        </span>
      </div>
    </div>
  </p>
<% end %>

<div id="sortable_table">
<%= render "users" %>
</div>

<br />
