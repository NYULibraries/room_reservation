<h1>Listing rooms</h1>

<%= form_tag rooms_path, :class => "form-inline clearfix", :method => :get do %>
  <p>
    <%= hidden_field_tag :direction, (params[:direction] || 'asc') %>
	  <%= hidden_field_tag :sort, (params[:sort] || sort_column) %>
	  <%= hidden_field_tag :room_group, params[:room_group]%>
    <div class="input-append pull-left form-group">
      <%= label_tag :q, "Search...", :class => "sr-only" %>
      <div class="input-group">
        <%= text_field_tag :q, params[:q], :class => "search_q q form-control", :placeholder => "Search...", style: "height: 33px;" %>
        <span class="input-group-btn">
          <%= button_tag(:type => 'submit', :id => "search", :class => "btn btn-primary search-btn") do
            content_tag(:span, 'Search', :class => "submit-search-text")+"     "+
            content_tag(:span, nil, :class => "glyphicon glyphicon-search")
          end %>
        </span>
      </div>
    </div>
  </p>
<% end %>

<div id="sortable_table">
<%= render "rooms" %>
</div>

<br />
